# Debug Configuration
DEBUG=false

# System Configuration
# Interval between charging checks in minutes (default: 5 minutes)
CHECK_INTERVAL_MINUTES=5

# Sunny Portal Configuration (all data now collected from here)
SUNNY_PORTAL_USERNAME=your-sunny-portal-username
SUNNY_PORTAL_PASSWORD=your-sunny-portal-password
SUNNY_PORTAL_URL=https://www.sunnyportal.com/

# Forecast adjustment percentage (100 = use forecast as-is, 80 = reduce by 20%, 120 = increase by 20%)
SUNNY_PORTAL_FORECAST_MULTIPLIER=100

# Octopus Go Configuration
OCTOPUS_GO_ENABLED=true
# Times are always in GMT (UTC), regardless of local time zone or BST/DST
OCTOPUS_GO_START_TIME=00:30
OCTOPUS_GO_END_TIME=05:30
OCTOPUS_GO_RATE=8.5

# Battery Configuration
# Monthly morning target SOC (excludes predicted generation) - ensures minimum charge for daily use
# CSV format: Jan,Feb,Mar,Apr,May,Jun,Jul,Aug,Sep,Oct,Nov,Dec
# Higher targets in winter months (Oct-Mar) for reduced solar generation
OCTOPUS_GO_MORNING_TARGET_SOC=45,45,45,30,30,30,30,30,30,45,45,45
# Monthly evening target SOC (includes predicted generation adjustment) - ensures charge for overnight/next morning  
# CSV format: Jan,Feb,Mar,Apr,May,Jun,Jul,Aug,Sep,Oct,Nov,Dec
# Higher targets in winter months (Oct-Mar) for increased heating/lighting demand
OCTOPUS_GO_EVENING_TARGET_SOC=60,60,60,55,55,55,55,55,55,60,60,60

# Consumption thresholds (watts)
# Don't start charging if consumption exceeds this threshold
CONSUMPTION_START_THRESHOLD=3000
# Stop charging if consumption exceeds this threshold (higher than start to account for charging load)
CONSUMPTION_STOP_THRESHOLD=6000

# Email notifications
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=recipient@gmail.com

# Legacy Agile settings (still used when Octopus Go is disabled)
CHEAP_PERCENTILE=25
MODERATE_PERCENTILE=25
CHEAP_THRESHOLD=60
CHEAP_DIFFERENCE=0.1
MODERATE_THRESHOLD=30